---
import Layout from "../layouts/Layout.astro";

const title = "Offline";
const description = "You are currently offline";
---

<Layout title={title} description={description}>
    <main>
        <h1>You're Offline</h1>
        <p>It seems you've lost your internet connection. Please check your network and try again.</p>
        <button onclick="window.location.reload()">Try Again</button>
    </main>
</Layout>

<style>
    main {
        text-align: center;
        padding: 20px;
    }
    button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>