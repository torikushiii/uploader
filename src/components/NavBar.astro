---
import Link from "./Link.svelte";

const navItems = [
    { href: "/", text: "Home" },
    { href: "/gallery", text: "Gallery" }
];
---

<nav>
    <ul>
        {navItems.map((item) => (
            <li>
                <Link href={item.href}>{item.text}</Link>
            </li>
        ))}
    </ul>
</nav>

<style>
    nav {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 1rem 0;
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 2rem;
    }

    li {
        font-size: 1.1rem;
    }
</style>