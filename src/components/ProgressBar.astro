<div id="progressBar" class="progress-bar" style="display: none;">
    <div id="progressBarFill" class="progress-bar-fill"></div>
</div>

<style>
    .progress-bar {
        width: 100%;
        height: 10px;
        background-color: #ccc;
        border-radius: 5px;
        margin-top: 10px;
    }

    .progress-bar-fill {
        height: 100%;
        background-color: #4CAF50;
        width: 0%;
        border-radius: 5px;
        transition: width 0.3s ease;
    }
</style>